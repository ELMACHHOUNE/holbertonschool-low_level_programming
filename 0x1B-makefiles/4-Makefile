# Usage: make [all/clean/oclean/fclean] -f [file]


CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# make all == makes executable
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# compile to object code with flags
main.o:
	$(CC) $(CFLAGS) -c -o main.o main.c
holberton.o:
	$(CC) $(CFLAGS) -c -o holberton.o holberton.c

# deletes tmp files & executable
clean:
	$(RM) *~ $(NAME)

# deletes object files
oclean:
	$(RM) $(OBJ)

# deletes all (tmp files, executable, & obj files)
fclean: clean oclean

# deletes all & recompiles all source files
re: oclean all
